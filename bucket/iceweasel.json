{
  "version": "v146.0.1",
  "description": "Iceweasel web browser, an independent browser derived from Firefox/Mozilla community code. The source tree is mostly laid out like Mozilla-based products.",
  "homepage": "https://github.com/adonais/iceweasel",
  "license": "MPL-2.0",
  "notes": [
    "To set profile 'Scoop' as *DEFAULT*, or profiles/settings was lost after update:",
    "  - Run 'Iceweasel Profile Manager', choose 'Scoop' then click 'Start Iceweasel'.",
    "  - Visit 'about:profiles' page in Iceweasel to check *DEFAULT* profile.",
    "For details: https://support.mozilla.org/en-US/kb/profile-manager-create-remove-switch-firefox-profiles"
  ],
  "architecture": {
    "64bit": {
      "url": "https://github.com/adonais/iceweasel/releases/download/v146.0.1/Iceweasel-v146.0.1.l10n_win64_pgo.7z"
    }
  },
  "extract_dir": "Iceweasel_x64/App",
  "post_install": [
    "Iceweasel -CreateProfile \"Scoop $persist_dir\\profile\"",
    "$Addition = \"$persist_dir\\addition\"",
    "if (Test-Path $Addition) {",
    "  info 'Copying additional items...'",
    "  Copy-Item -Path $Addition\\* -Destination $dir -Force -Recurse -ErrorAction SilentlyContinue",
    "}"
  ],
  "bin": "Iceweasel.exe",
  "shortcuts": [
    [
      "Iceweasel.exe",
      "Iceweasel"
    ],
    [
      "Iceweasel.exe",
      "Iceweasel Profile Manager",
      "-P"
    ]
  ],
  "persist": [
    "distribution",
    "profile"
  ],
  "checkver": {
    "github": "https://github.com/adonais/iceweasel"
  },
  "autoupdate": {
    "architecture": {
      "64bit": {
        "url": "https://github.com/adonais/iceweasel/releases/download/$version/Iceweasel-$version.l10n_win64_pgo.7z#/dl.7z"
      }
    }
  }
}

